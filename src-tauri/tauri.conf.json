{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "eSoft Facturi",
  "version": "0.6.1",
  "identifier": "facturi.softconsulting.com",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "eSoft Facturi",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/*"
    ],
    "macOS": {
      "entitlements": "entitlements.plist",
      "infoPlist": "Info.plist"
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDFDMTRGQzkwMjM1NjZFNzYKUldSMmJsWWprUHdVSE9iUE9LUndZd1IrMENKc0xlQXc2REV3SmIrVTV2MTZnU1FNQno2aUMydWsK",
      "endpoints": [
        "https://github.com/Economic-Soft-Consulting/windows-app/releases/latest/download/latest.json"
      ]
    }
  }
}